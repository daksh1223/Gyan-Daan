        <div class="container" style="text-align:center;margin-top:2%;font-weight: 500;font-size:2rem;">
            <div style="display:flex;flex-direction:column;margin-bottom: 5%;">
                <img id="QR_Code"
                    src="https://www.upiqrcode.com/upiqrtestapi?apikey=olymhx&seckey=MaNgOaPp&vpa=dakshsharma8777@oksbi&payee=Daksh%20Sharma"
                    style="border:4px solid black" />

            </div>
            <div class="form-group row form_attr">
                <label for="Payee" class="col-3">Payee Name:</label>
                <div class="col-4">
                    <input type="text" class="form-control" id="Payee" value="Daksh Sharma" readonly />
                </div>
            </div>
            <div class="form-group row form_attr">
                <label for="Payee_UPI" class="col-3">UPI ID:</label>
                <div class="col-4">
                    <input type="text" id="Payee_UPI" class="form-control" value="dakshsharma8777@oksbi" readonly />
                </div>
            </div>
            <div class="form-group row form_attr">
                <label for="Amount" class="col-3">Amount(in Rs):</label>
                <div class="col-4">
                    <input type="number" id="Amount" class="form-control" value="500.00" onkeyup="render_QR_Code()"
                        onclick="render_QR_Code()" />
                </div>
            </div>
            <div>Scan the above QR code to donate.
            </div>
        </div>
    </div>
    </div>
    <script>
        function render_QR_Code() {
            let image = document.getElementById("QR_Code");
            let amount = document.getElementById("Amount").value || 0;
            let url = "https://www.upiqrcode.com/upiqrtestapi?apikey=olymhx&seckey=MaNgOaPp&vpa=dakshsharma8777@oksbi&payee=Daksh%20Sharma"
                + `&amount=${amount}`;
            image.src = url;
        }   
    </script>
