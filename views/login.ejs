<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <!-- CSS only -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
    integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <script src="https://kit.fontawesome.com/c939d0e917.js"></script>
  <link href="css/login.css" rel="stylesheet"/>
  <title>GyanDaan | Login</title>
</head>

<body style="min-height:100vh; width: 98vw;">
  <img src="/images/logo.png" style="width: 200px;margin: 1%;" />
  <main class="col mb-1">
    <div class="px-4 mb-5 text-center ">
      <h1 class="display-5 fw-bold" style="color:rgb(79, 70, 229)">Login To Your Account</h1>
      <div class="col-lg-6 mx-auto">
        <p class="lead mb-4" style="color: black">We are a group of volunteers spreading knowledge through
          technology.<br /> You can <strong>Sign Up</strong>
          or <strong>Sign In</strong> using one of the following methods</p>
      </div>
    </div>
    <div class="row" style="margin-left:20%;">
      <div class="col" style="max-width:35%;">
        <div class="option" onclick="onStudentClick()">
          <input type="radio" name="card" id="silver" value="silver">
          <label for="silver" aria-label="Silver" >
            <span></span>

            Student


          </label>
        </div>

        <div class="option" onclick="onEducatorClick()">
          <input type="radio" name="card" id="royal" value="royal">
          <label for="royal" aria-label="Royal blue">
            <span></span>
            Educator
          </label>
        </div>
      </div>
      <div class="col me-5" style="max-width:1%;">
         <div class="vline mx-auto"></div>
      </div>
      <div class="col">
        <form action="/auth/google" method="POST"  >
          <input type="hidden" name="isEducator" id="googleIsEducator" />
          <button type="submit" class="mb-1" style="width:320px; height:60px"><i class="fab fa-google me-2"></i> Sign in with Google</button>
        </form>
        <form action="/auth/microsoft" method="POST" >
          <input type="hidden" name="isEducator" id="microsoftIsEducator" />
          <button type="submit" style="width:320px; height:60px"><i class="fab fa-microsoft me-2"></i>Sign in with Microsoft</button>
        </form>
      </div>
    </div>
  </main>

</body>
<script>
  function onEducatorClick(){
    document.getElementById('googleIsEducator').value = true;
    document.getElementById('microsoftIsEducator').value = true;
    localStorage.setItem('isEducator', 'true');
  }

  function onStudentClick(){
    document.getElementById('googleIsEducator').value = false;
    document.getElementById('microsoftIsEducator').value = false;
    localStorage.setItem('isEducator', 'false');
  }
  
  document.getElementById('royal').checked = (localStorage.getItem('isEducator') === 'true')
  document.getElementById('silver').checked = (localStorage.getItem('isEducator') === 'false')
  document.getElementById('microsoftIsEducator').value = (localStorage.getItem('isEducator') === 'true')
  document.getElementById('googleIsEducator').value = (localStorage.getItem('isEducator') === 'true')
</script>

</html>