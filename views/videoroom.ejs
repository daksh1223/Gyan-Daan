    <script src="/js/chat_functionalities.js" defer></script>
    <script src="/js/AgoraRTCSDK-3.6.0.js"></script>
    <script src="/js/video_resize.js"></script>
    <script src="/js/video_functionalities.js"></script>
    <script src="/js/user_functionalities.js" defer></script>

</head>

<body onload="time_tracker()">
    <div class="main_window">
        <div class="left_window" id="left" style="width:70%;">
            <div class="videos_container">
                <div id="video-grid">

                </div>
            </div>
            <div class="left_window_controls">
                <div class="left_window_controls_block" id="features_container">
                    <div id="timer"
                        style="color:white;margin-left:2%;margin-right:1%;font-size:2.5vmin;align-self: center;">00:00
                    </div>
                    <button id="copy-btn" type="button" class="btn btn-dark btn-lg pointer"
                        style="display:flex;width:6%;margin-right:1%;height:100%;justify-content:center;"
                        title="Copy URL Link" onclick="copy_link()">
                        <i class="fas fa-copy" style="font-size:3vmin;"></i>
                    </button>

                    <button id="paticipants-btn" type="button" class="btn btn-dark btn-lg pointer"
                        style="display:flex;width:6%;height:100%;margin-right:1%;justify-content:center;"
                        title="Participants" onclick="onParticipantsClick()">
                        <i class="fas fa-user-friends" style="font-size:3vmin;"></i>
                    </button>

                    <button id="chat-btn" type="button" class="btn btn-dark btn-lg pointer" title="Chat"
                        style="display:flex;width:6%;height:100%;margin-right:1%;justify-content:center;"
                        onclick="onChatClick()">
                        <i class="fas fa-comment-alt" style="font-size:3vmin;"></i>
                    </button>
                </div>
            </div>
        </div>
        <div class="right_window" id="right" style="display:flex;">
            <div class="right_window_header">
                <p style="font-size:3.5vmin;float:left;margin-left:1%;">Chat</p>
                <button type="button" class="close" aria-label="Close" onclick="onChatClick()">
                    <span aria-hidden="true" style="float:right;color:white;margin-right:2%;">&times;</span>
                </button>
            </div>
            <div class="right_window_chat">
                <div id="chat_messages" style="color:black;">

                </div>

            </div>
            <div style="display: flex;align-items: flex-end;margin-bottom: 1%;" id="chat_sender">
                <label style="cursor:pointer;margin-bottom: 10px;"><i title="upload File" class="fas fa-paperclip fa-lg"
                        style="color: white;"></i>
                    <input type="file" class="admin__input" id="myFile" name="upload"
                        onChange="handleChatFileUpload()" /></label>
                <div id="editor_container" style="display: flex;">
                    <textarea id="editor" oninput="auto_grow(this)" placeholder="Type here..." rows=1></textarea>
                    <i id="editor_clear" onclick="clear_editor()" title="clean" class="fas fa-window-close fa-lg"></i>
                </div>
                <i id="submit_button" title="Send Message" onclick="send_chat_message()" class="fa fa-send fa-lg"
                    style="color:white;cursor:pointer;margin-bottom: 15px ;">
                </i>

            </div>
        </div>
        <div class="participants_window" id="participants_window" style="display:none;">
            <div class="right_window_header">
                <p style="font-size:3.5vmin;float:left;margin-left:1%;">Participants</p>
                <button type="button" class="close" aria-label="Close" onclick="onParticipantsClick()">
                    <span aria-hidden="true" style="float: right;color:white;margin-right:1%;">&times;</span>
                </button>
            </div>
            <div style="font-size:2.5vmin;background-color: rgb(63, 62, 62);border-radius: 5px;margin-left:
                    1%;margin-right:4px;margin-bottom:5px;padding-left: 1px;color:white;">
                The list shows the users that are currently present in the call.
            </div>
            <div id="participants_list" style="overflow:auto;margin-left:1%;">

            </div>
        </div>
    </div>
    </div>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
    <script type="text/javascript"
